{
	"compilerOptions": {
		"target": "ES2015",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./build",
		"declaration": true,
		"moduleResolution": "node",
		"jsx": "react",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["./src"]
}
